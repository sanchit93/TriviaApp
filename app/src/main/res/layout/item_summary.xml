<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/background_card_lightest"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/darkest"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Game: 15March 2020" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkest"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvAnswerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Here are the answers selected:"
        android:textColor="@color/dark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvQuest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Who is the best cricketer in the world?"
        android:textColor="@color/darkest"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAns1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Ans msdhoni" />

    <TextView
        android:id="@+id/tvQuest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="What are the colours in the national flag?"
        android:textColor="@color/darkest"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAns2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Ans" />

</LinearLayout>